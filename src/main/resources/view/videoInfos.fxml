<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>

<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.control.TreeTableColumn?>
<AnchorPane fx:id="VideoLayout" prefHeight="493.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.classes.VideoInfoController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="1000.0">
         <image>
            <Image url="@../images/filmFrame.jpg" />
         </image>
      </ImageView>
      <WebView fx:id="idWebView" layoutX="26.0" layoutY="14.0" prefHeight="312.0" prefWidth="383.0" />
      <Button fx:id="idPlay" layoutX="26.0" layoutY="394.0" mnemonicParsing="false" onAction="#handlePlay" prefHeight="62.0" prefWidth="83.0" text="%buttonLoadVideo" />
      <Button fx:id="idCancel" layoutX="133.0" layoutY="394.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="62.0" prefWidth="91.0" text="%buttonCancel" />
      <ButtonBar layoutX="495.0" layoutY="63.0" prefHeight="40.0" prefWidth="200.0" />
      <TableView fx:id="videoInfo" layoutX="415.0" layoutY="14.0" prefHeight="666.0" prefWidth="566.0">
        <columns>
          <TableColumn fx:id="userColumn" prefWidth="161.0" text="%col-user" />
          <TableColumn fx:id="commentColumn" prefWidth="404.0" text="%col-comment" />
        </columns>
      </TableView>
      <MFXButton fx:id="idLink" layoutX="26.0" layoutY="468.0" onAction="#handleOpenLink" prefHeight="40.0" prefWidth="200.0" text="%button-link" />
   </children>
</AnchorPane>
